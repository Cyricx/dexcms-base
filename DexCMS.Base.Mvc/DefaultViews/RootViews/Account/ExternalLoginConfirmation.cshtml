@model DexCMS.Base.Mvc.Models.ExternalLoginConfirmationViewModel


@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-box", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h3>Associate your @ViewBag.LoginProvider account.</h3>

    @Html.ValidationSummary(true, "")
    <p>
        You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.
        Please enter a user name for this site below and click the Register button to finish
        logging in.
    </p>
    <div class="form-item">
        @Html.LabelFor(m => m.Email, new { @class = "form-lbl" })
        <div>
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email, "")
        </div>
    </div>
    <div class="form-btn">
            <input type="submit" value="Register" />
    </div>
}

