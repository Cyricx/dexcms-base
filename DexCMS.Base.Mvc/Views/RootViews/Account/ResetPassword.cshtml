@model DexCMS.Base.Mvc.Models.ResetPasswordViewModel

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, 
    new { @class = "form-box", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("")
    @Html.HiddenFor(model => model.Code)
    <div class="form-item">
        @Html.LabelFor(m => m.Email, new { @class = "form-lbl" })
        <div>
            @Html.TextBoxFor(m => m.Email)
        </div>
    </div>
    <div class="form-item">
        @Html.LabelFor(m => m.Password, new { @class = "form-lbl" })
        <div>
            @Html.PasswordFor(m => m.Password)
        </div>
    </div>
    <div class="form-item">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-lbl" })
        <div>
            @Html.PasswordFor(m => m.ConfirmPassword)
        </div>
    </div>
    <div class="form-btn">
            <input type="submit" value="Reset" />
    </div>
}
