@{
    var pageImage = (DexCMS.Base.Models.PageContentImage)ViewData["Image"];
    var imageType = ViewData["ImageType"] != null ? (string)ViewData["ImageType"] : "Gallery";
    var imagePath = "";
    switch (imageType)
    {
        case "Slider":
            imagePath = "~/" + pageImage.Image.Slider;
            break;
        case "Gallery":
            imagePath = "~/" + pageImage.Image.Gallery;
            break;
        case "Original":
            imagePath = "~/" + pageImage.Image.Original;
            break;
        case "Thumbnail":
            imagePath = "~/" + pageImage.Image.Thumbnail;
            break;
    }
}

<li>
    <img src="@Url.Content(imagePath)" />
    <span class="caption">@pageImage.Image.Caption</span>
    <span class="credit">@pageImage.Image.Credit</span>
</li>
